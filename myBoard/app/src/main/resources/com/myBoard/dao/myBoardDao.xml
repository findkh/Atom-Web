<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.myBoard.dao.myBoardDao">

  <resultMap type="myBoard" id="myboardMap">
    <id column="board_no" property="no"/>
    <result column="title" property="title"/>
    <result column="content" property="content"/>
    <result column="created_date" property="createdDate"/>
    <result column="view_count" property="viewCount"/>
  </resultMap>

  <select id="findAll" resultMap="myboardMap">
    select 
      board_no,
      title,
      created_date,
      view_count
    from 
      my_board 
    order by 
      board_no desc
  </select>
  
  <select id="findByNo" resultMap="myboardMap" parameterType="int">
    select 
      board_no,
      title,
      content,
      created_date,
      view_count
    from 
      my_board
    where 
      board_no=#{no}
  </select>

  <insert id="insert" parameterType="myBoard">
    insert into my_board (title,content) 
    values(#{title},#{content})
  </insert>

  <update id="update" parameterType="myBoard">
    update my_board set 
      title=#{title}, 
      content=#{content} 
    where 
      board_no=#{no}
  </update>
  
  <select id="countAll" resultType="int">
    select count(*) from ml_board
  </select>

  <delete id="delete" parameterType="int">
    delete from my_board 
    where board_no=#{no}
  </delete>

  <update id="increaseViewCount" parameterType="int">
    update my_board set 
      view_count=view_count + 1 
    where board_no=#{no}
  </update>


</mapper>








